{
  "type": "module",
  "name": "svelte-ssr",
  "version": "0.0.13",
  "description": "Tool to setup svelte server side rendering with webpack",
  "main": "./index.js",
  "scripts": {
    "watch": "./node_modules/.bin/tsc -w",
    "build": "rm -rf ./build && npm run build:mjs && npm run build:cjs",
    "build:cjs": "npm run build:cjs:core && npm run build:cjs:index && npm run build:cjs:client && npm run build:cjs:server && npm run build:cjs:webpack",
    "build:cjs:core": "./node_modules/.bin/tsc -m commonjs",
    "build:cjs:index": "node ./build/export.js --source ./build/index.js --target ./index.js",
    "build:cjs:client": "node ./build/export.js --source ./build/client.js --target ./client.js",
    "build:cjs:server": "node ./build/export.js --source ./build/server.js --target ./server.js",
    "build:cjs:webpack": "node ./build/export.js --source ./build/webpack.js --target ./webpack.js",
    "build:mjs": "npm run build:mjs:core && npm run build:mjs:index && npm run build:mjs:client && npm run build:mjs:server && npm run build:mjs:webpack",
    "build:mjs:core": "./node_modules/.bin/tsc -m esnext && find ./build -depth -exec rename 's/\\.js/\\.mjs/' {} +",
    "build:mjs:index": "node --experimental-modules ./build/export.mjs --source ./build/index.mjs --target ./index.mjs",
    "build:mjs:client": "node --experimental-modules ./build/export.mjs --source ./build/client.mjs --target ./client.mjs",
    "build:mjs:server": "node --experimental-modules ./build/export.mjs --source ./build/server.mjs --target ./server.mjs",
    "build:mjs:webpack": "node --experimental-modules ./build/export.mjs --source ./build/webpack.mjs --target ./webpack.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:gustarus/svelte-ssr.git"
  },
  "bugs": {
    "url": "https://github.com/gustarus/svelte-ssr/issues"
  },
  "homepage": "https://github.com/gustarus/svelte-ssr",
  "bin": {
    "svelte-ssr": "./build/cli.js"
  },
  "author": "Pavel Kondratenko <iam@kondratenko.me>",
  "license": "ISC",
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/concurrently": "^5.2.0",
    "@types/express": "^4.17.6",
    "@types/fs-extra": "^8.0.1",
    "@types/http-proxy": "^1.17.4",
    "@types/lodash.merge": "^4.6.6",
    "@types/md5": "^2.1.33",
    "@types/node": "^13.5.0",
    "@types/yargs": "^15.0.4",
    "esm": "^3.2.25",
    "typescript": "^3.7.5",
    "webpack": "^4.43.0"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "commander": "^4.1.0",
    "concurrently": "^5.2.0",
    "detect-port": "^1.3.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "fs-extra": "^8.1.0",
    "http-proxy": "^1.18.0",
    "lodash.merge": "^4.6.2",
    "node-html-parser": "^1.2.16",
    "nodemon": "^2.0.3",
    "path": "^0.12.7",
    "svelte": "^3.20.1",
    "yargs": "^15.3.1"
  }
}
